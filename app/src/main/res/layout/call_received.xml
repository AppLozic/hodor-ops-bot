<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/whitesmoke"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/applozic_red_color"
        android:id="@+id/notification_user_detail_rl">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=" Urgent Alert"
            android:id="@+id/notification_user_name"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/notification_profile_image"
        android:src="@drawable/applozic_ic_contact_picture_180_holo_light"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/notification_user_detail_rl"
        android:visibility="gone"
        android:layout_marginBottom="52dp">
    </ImageView>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/notification_message_text"
        android:layout_centerHorizontal="true"
        android:text="meta data detail, like what is the error, severity level. Issue No, component ect."
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/notification_user_detail_rl"
        android:layout_marginBottom="52dp">
    </TextView>

    <RelativeLayout
        android:layout_height="100dp"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:background="@color/whitesmoke"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alarmlistitem_rejectButton"
            android:background="@color/applozic_red_color"
            android:layout_alignTop="@+id/alarmlistitem_acceptButton"
            android:layout_alignParentLeft="true"
            android:text="REJECT"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            />
        <Button
            android:id="@+id/alarmlistitem_acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@color/applozic_green_color"
            android:text="ANSWER"
            android:textColor="@color/white"
            />
    </RelativeLayout>

</RelativeLayout>